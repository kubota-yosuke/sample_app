<%= form_with model: vehicle, local: true do |f| %>
  <div class="form-group">
    <%= f.label :vehicle_name %>
    <%= f.text_field :vehicle_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :vehicle_image %>
    <%= f.file_field :vehicle_image, class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :vehicle_image_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag vehicle.vehicle_image.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
  <%= f.submit value="投稿", class: "btn btn-primary" %>
<% end %>
